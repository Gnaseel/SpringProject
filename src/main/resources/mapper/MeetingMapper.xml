<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.ex.mapper.MeetingMapper">
 	
 	<insert id="createMeeting">
 		 insert into MEETING values(#{post_ID}, #{organizer_ID}, #{summary}, #{max_attendee}, 0, #{location}, #{category} )
 	</insert>
 	
 	<select id="getMeetingInfo" resultType="com.sp.ex.dto.MeetingDTO" parameterType="int">
 		select * from MEETING where post_id=#{post_ID}
 	</select>
 	
 	<insert id="addMember" parameterType="String">
		insert into attendee values(#{post_ID}, #{user_ID})
	</insert>
	
	<update id="reCounnting">
		update MEETING set CUR_ATTENDEE=CUR_ATTENDEE+#{sum} where POST_ID=#{post_ID}
	</update>
	
	<select id="isAttended" resultType="Map">
		select * from attendee where POST_ID=#{post_ID} and ATTENDEE_ID=#{user_ID}
	</select>
</mapper>